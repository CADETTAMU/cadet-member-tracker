<p id="notice"><%= notice %></p>

<h1>Attendances</h1>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Full name</th>
      <th>Uid</th>
      <th>Avatar url</th>
      <th>Index admins on email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @attendances.each do |attendance| %>
      <tr>
        <td><%= attendance.email %></td>
        <td><%= attendance.full_name %></td>
        <td><%= attendance.uid %></td>
        <td><%= attendance.avatar_url %></td>
        <td><%= attendance.index_admins_on_email %></td>
        <td><%= link_to 'Show', attendance %></td>
        <td><%= link_to 'Edit', edit_attendance_path(attendance) %></td>
        <td><%= link_to 'Destroy', attendance, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Attendance', new_attendance_path %>
